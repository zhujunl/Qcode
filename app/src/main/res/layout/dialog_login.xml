<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/dia_name_tv"
        android:text="姓       名     ："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/dia_code_tv"
        android:text="身份证号码："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/dia_name_tv"
        app:layout_constraintStart_toStartOf="@id/dia_name_tv"/>
    <EditText
        android:id="@+id/name_et"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@id/dia_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/dia_name_tv"
        app:layout_constraintStart_toEndOf="@id/dia_name_tv"/>
    <EditText
        android:id="@+id/code_et"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/dia_code_tv"
        app:layout_constraintBottom_toBottomOf="@id/dia_code_tv"
        app:layout_constraintStart_toEndOf="@id/dia_code_tv"/>
    <TextView
        android:id="@+id/dia_cancle"
        android:text="取消"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="@id/dia_sure"
        app:layout_constraintEnd_toStartOf="@id/dia_sure"/>
    <TextView
        android:id="@+id/dia_sure"
        android:text="确定"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/code_et"
        app:layout_constraintEnd_toEndOf="@id/code_et"/>
    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/dia_sure"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>